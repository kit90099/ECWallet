<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.MediumComponent.rounded</item>
        <item name="materialCardViewStyle">@style/Widget.App.CardView</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent.rounded" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>
    <style name="ShapeAppearance.App.MediumComponent.circle" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">100%</item>
    </style>

    <style name="cardview_setting">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">0dp</item>
    </style>

    <style name="rounded_image">
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">1000dp</item>
    </style>

    <style name="Widget.App.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent.rounded</item>
    </style>

    <style name="SignUpTextLayouts" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/colorComponentBackground</item>
        <item name="android:textColorHint">#D1F1F1</item>
        <item name="android:textColor">@color/colorStartUpText</item>
        <item name="strokeColor">#00000000</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="counterEnabled">true</item>
        <item name="counterMaxLength">25</item>
        <item name="counterTextColor">@color/colorStartUpText</item>
    </style>

    <style name="SignUpEditTextsTheme" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColor">@color/colorStartUpText</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">25</item>
    </style>

    <style name="ButtonTheme" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_width">280dp</item>
        <item name="cornerRadius">70dp</item>
        <item name="android:shadowRadius">0</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="backgroundTint">#FFFFFF</item>
        <item name="android:textColor">@color/colorBackgroundEnd</item>
        <item name="android:clickable">true</item>
        <item name="android:checkable">true</item>
    </style>

    <style name="RoundedButton" parent="Widget.MaterialComponents.Button">
        <item name="android:clickable">true</item>
        <item name="android:checkable">true</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">200dp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.App.MediumComponent.circle</item>
        <item name="android:padding">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textSize">30dp</item>
    </style>

    <style name="DisabledButtonTheme" parent="ButtonTheme">
        <item name="backgroundTint">@color/colorComponentBackground</item>
        <item name="android:textColor">#8DA5A5</item>
        <item name="android:clickable">false</item>
        <item name="android:checkable">false</item>
    </style>

    <style name="StartPagesTheme">
        <item name="android:background">@drawable/color_gradient</item>
    </style>

    <style name="FontHeadline">
        <item name="android:textSize">40dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="FontTitle">
        <item name="android:textSize">30dp</item>
    </style>
    <style name="FontSubtitle">
        <item name="android:textSize">25dp</item>
    </style>
    <style name="FontHeader">
        <item name="android:textSize">20dp</item>
    </style>
    <style name="FontBody">
        <item name="android:textSize">16dp</item>
    </style>

    <style name="ImageBody">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
    </style>
    <style name="ImageSmallComponent">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
    </style>
    <style name="ImageUserCard">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
    </style>
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorDivider</item>
    </style>
</resources>