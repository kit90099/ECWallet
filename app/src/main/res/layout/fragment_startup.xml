<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartUpFragment"
    style="@style/StartPagesTheme"
    >

    <ImageView
        android:id="@+id/img_start_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/ic_launcher_round"
        android:layout_gravity="center_vertical|center_horizontal"
        />

    <TextView
        android:id="@+id/txt_start_slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorStartUpText"
        android:text="Welcome to ECWallet!" />


    <com.google.android.material.button.MaterialButton
        style="@style/ButtonTheme"
        android:id="@+id/btn_start_signup"
        android:checkable="true"
        android:text="Sign Up"
        />

    <com.google.android.material.button.MaterialButton
        style="@style/ButtonTheme"
        android:id="@+id/btn_start_login"
        android:checkable="true"
        android:text="Login"
        />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/pager_start"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:visibility="gone"
        />

</FrameLayout>